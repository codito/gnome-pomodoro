#!/usr/bin/make -f
# -*- makefile -*-
# Uncomment this to turn on verbose mode.
# export DH_VERBOSE=1

%:
	dh $@ --with autoreconf

override_dh_autoreconf:
	dh_autoreconf ./autogen.sh -- --prefix=@prefix@ --datadir=@datadir@

override_dh_auto_test:
	# tests require an X server
	xvfb-run -a dh_auto_test


postinst:
	su - $SUDO_USER -c "xdg-desktop-icon install @datadir@/applications/org.gnome.Pomodoro.desktop"

postrem:
	su - $SUDO_USER -c "xdg-desktop-icon uninstall @datadir@/applications/org.gnome.Pomodoro.desktop"
